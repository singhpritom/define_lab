<div class="container">
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@book, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter book's title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :author %>  
        </div>
        <div class="col-sm-8">
          <%=f.collection_select(:author_ids, Author.all, :id,:firstname, {multiple: true})%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit%>
      </div>
    </div>
    <%end%>
  </div>
</div>
</div>

    