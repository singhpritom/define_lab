<div class="container">
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@author, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :firstname %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :firstname, class: "form-control", placeholder: "Enter firstname", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :lastname %>  
        </div>
         <div class="col-sm-8">
          <%= f.text_field :lastname, class: "form-control", placeholder: "Enter lastname", autofocus: true %>
        </div>
        <div class="col-sm-8">
         
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :dateofbirth %>  
        </div>
         <div class="col-sm-8">
          <%= f.text_field :dateofbirth, class: "form-control", placeholder: "Enter dateofbirth", autofocus: true %>
        </div>
        <div class="col-sm-8">
         
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit%>
      </div>
    </div>
    <%end%>
  </div>
</div>
</div>

    